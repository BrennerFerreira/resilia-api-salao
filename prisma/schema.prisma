// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  schedules Scheduling[] 
}

model Services {
  id String @id @default(uuid())
  employeeName String
  name String 
  price Decimal
}

model Produtos {
 id       String @id @default(uuid())
  name     String
  preco  Decimal
}


model Scheduling {
  id     String @id @default(uuid())
  userId String
  user   User @relation(fields:[userId], references:[id])
  data   DateTime
}

